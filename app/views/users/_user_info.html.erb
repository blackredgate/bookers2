    <div class="col-md-3">
      <!-- エラーメッセージ -->
      <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <!-- ユーザーの詳細 -->
      <h3>User info</h3>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <div>
        <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>


      <!-- 新規投稿フォーム -->
      <div class="row my-3">
        <h3>New book</h3>
        <%= form_with model: @book, url: '/books' do |f| %>
          <div>
            <label>Title</label>
            <div><%= f.text_field :title, size: 30 %></div>
          </div>
          <div>
            <label>Opinion</label>
            <div><%= f.text_area :body, size: "30" %></div>
          </div>
        	<div>
        	  <%= f.submit 'Create Book', class:'btn btn-sm btn-success' %>
        	</div>
        <% end %>
      </div>

    </div>
    