<div class="container">
  <div class="row my-4">
    <%= render 'users/user_info', user: @user %>
    
    <!-- 投稿詳細 -->
    <% if @user.id == current_user.id %>
          <div class="col-md-7">
            <h3>Book detail</h3>
            <div class="row border-top">
              <div class="col-md-3">
                <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
                <div><%= link_to user_path(@book.user_id) do %><%= @user.name %><% end %></div>
              </div>
              <div class="col-md-2">
                <%= link_to book_path(@book.id) do %><%= @book.title %><% end %>
              </div>
              <div class="col-md-2">
                <%= @book.body %>
              </div>
              <div class="col-md-2">
                <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
              </div>
              <div class="col-md-2">
                <%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger' %>
              </div>
            </div>
          </div>
    <% else %>
          <div class="col-md-7">
            <h3>Book detail</h3>
            <div class="row border-top">
              <div class="col-md-4">
                <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
                <div><%= link_to user_path(@book.user_id) do %><%= @user.name %><% end %></div>
              </div>
              <div class="col-md-3">
                <%= link_to book_path(@book.id) do %><%= @book.title %><% end %>
              </div>
              <div class="col-md-5">
                <%= @book.body %>
              </div>
            </div>
          </div>
    <% end %>
  </div>
</div>

