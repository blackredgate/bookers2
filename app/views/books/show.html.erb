<div class="container">
  <div class="row my-4">
    <%= render 'users/user_info', user: @user %>
    
    <div class="col-md-7">
      <!-- 投稿詳細 -->
      <% if @user.id == current_user.id %>
        <h3>Book detail</h3>
          <table class="table">
            <thead></thead>
            <tbody>
              <tr>
                <td>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br>
                  <%= link_to user_path(@book.user_id) do %><%= @user.name %><% end %>
                </td>
                <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
                <td><%= @book.body %></td>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %></td>
              </tr>
            </tbody>
          </table>
      <% else %>
        <h3>Book detail</h3>
          <table class="table">
            <thead></thead>
            <tbody>
              <tr>
                <td>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br>
                  <%= link_to user_path(@book.user_id) do %><%= @user.name %><% end %>
                </td>
                <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
                <td><%= @book.body %></td>
              </tr>
            </tbody>
          </table>
      <% end %>
    </div>
</div>
