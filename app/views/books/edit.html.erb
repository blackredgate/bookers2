<div class="container">
  <div class="row my-4">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h3>Editing Book</h3>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        
        <p>Opinion</p>
        <%= f.text_area :body %>
        
        <div>
          <%= f.submit 'Update Book', class:'btn btn-sm btn-success' %>
        </div>
      <% end %>
      
      <p>
    <%= link_to "Show", book_path(@book.id) %>
     | 
    <%= link_to "Back", books_path %>
    </p>
    </div>
  </div>
</div>
