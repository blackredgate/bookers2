<div class="container">
  <div class="row my-4">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h3>Editing Book</h3>
      <%= form_with model: @book do |f| %>
        <div>
          <label>Title</label>
          <div><%= f.text_field :title, size: 50 %></div>
        </div>
        
        <div>
          <label>Opinion</label>
          <div><%= f.text_area :body, size: "50 x 5" %></div>
        </div>
        
        <div>
          <%= f.submit 'Update Book', class:'btn btn-sm btn-success' %>
        </div>
      <% end %>
      
      <div>
        <p>
        <%= link_to "Show", book_path(@book.id) %>
         | 
        <%= link_to "Back", books_path %>
      </p>
      </div>
    </div>
  </div>
</div>
